<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<title>prompt语句2</title>
 <script type="text/javascript">
   function rec(){
	   var score=prompt("请输入你的成绩");
	   if(score>=90){
		   document.write("那你很棒棒哦");
		   }
	   else if(score>=75){
			document.write("哎呦，不错哦");
			}
	   else if (score>=60){
		    document.write("我觉得还行");
		   } 
	   else{
		    document.write("吔屎啦你");
		   }
	   }
 </script>
</head>

<body>
   <input name="button" type="button" onClick="rec()" value="点击我，弹出确认      对话框" />
</body>
</html>
