<title>confirm语法</title>
   <script type="text/javascript">
      function rec(){
      var mysex=confirm("喜欢动漫吗");
	  if(mysex==true){
		  document.write("眼光不错");
		  }
	  else{
		  document.write("滚");
		  }
	  }
   </script>
</head>
<body>
    <input name="button" type="button" onClick="rec()" value="点击我，弹出确认      对话框" />
</body>
